---
import Image from "astro/components/Image.astro";

type AvatarSize = "sm" | "md" | "lg" | "xl";

interface Props {
  path: string;
  size?: AvatarSize;
  className?: string;
  alt?: string;
}

const { path, size = "md", className, alt = "Avatar" } = Astro.props;

const sizeClasses: Record<AvatarSize, string> = {
  sm: "w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 lg:w-20 lg:h-20 xl:w-24 xl:h-24",
  md: "w-16 h-16 sm:w-20 sm:h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 xl:w-32 xl:h-32",
  lg: "w-20 h-20 sm:w-24 sm:h-24 md:w-28 md:h-28 lg:w-36 lg:h-36 xl:w-48 xl:h-48",
  xl: "w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 xl:w-64 xl:h-64",
};

const sizeMap: Record<AvatarSize, number> = {
  sm: 32,
  md: 64,
  lg: 128,
  xl: 192,
};
---

<Image
  src={path}
  alt={alt}
  width={sizeMap[size]}
  height={sizeMap[size]}
  class={`rounded-full ${className} ${sizeClasses[size]}`}
/>
